<Window x:Class="Content_Management_System.Pages.SpicePreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Content_Management_System.Pages"
        mc:Ignorable="d"
        Height="500" Width="650"
        WindowStartupLocation="CenterScreen">
    
    <Window.Background>
        <ImageBrush ImageSource="../Resources/Images/tableBackground.png"
            Stretch="UniformToFill"
            AlignmentX="Center"
            AlignmentY="Center"/>
    </Window.Background>

    <Border CornerRadius="10" BorderBrush="DarkGray" BorderThickness="1" Background="#AAFFFFFF" Margin="20">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="108"/>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>

            <!-- Naslov -->
            <TextBlock Grid.Row="0" Text="Spice Preview"
               FontSize="22" FontWeight="Bold" FontFamily="Verdana"
               HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <!-- Deo za sliku (levo) i polja (desno) -->
            <Grid Grid.Row="1" Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <!-- Slika -->
                    <ColumnDefinition Width="*"/>
                    <!-- Polja -->
                </Grid.ColumnDefinitions>

                <!-- Kvadrat za preview slike -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- Dugme sa slikom -->
                    <Image x:Name="ImagePreview"
                        Source="../Resources/Images/imagePlaceholder1.png"
                        Stretch="Uniform"
                        MaxWidth="140"
                        MaxHeight="100"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Polja ID i Name -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="20,0,20,5">
                        <Label Content="ID:" Width="55" FontFamily="Verdana" FontSize="14" VerticalAlignment="Center"/>
                        <TextBox x:Name="IdBox" Width="150" FontFamily="Verdana" Margin="5,0,0,0" FontSize="14" VerticalAlignment="Center" IsReadOnly="True"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="20,0,20,5">
                        <Label Content="Name:" Width="55" FontFamily="Verdana" FontSize="14" VerticalAlignment="Center"/>
                        <TextBox x:Name="NameBox" Width="150" FontFamily="Verdana" Margin="5,0,0,0" FontSize="14" VerticalAlignment="Center" IsReadOnly="True"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <Label Grid.Row="2" Content="Description" FontFamily="Verdana" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <DockPanel Grid.Row="3" LastChildFill="True">
                <StatusBar DockPanel.Dock="Bottom" Background="SandyBrown">
                    <TextBlock x:Name="txtWordCount" Text="Words: 0" FontFamily="Verdana" />
                </StatusBar>

                <RichTextBox x:Name="DescriptionBox" VerticalAlignment="Top" FontFamily="Verdana" Height="156" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>

            </DockPanel>

            <!-- Dugmad za snimanje/otkazivanje -->
            <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="CancelBtn" Cursor="Hand" Content="Back" Width="100" FontFamily="Verdana" Margin="10,0,0,0" Foreground="Black" Click="CancelBtn_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
