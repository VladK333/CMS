<Window x:Class="Content_Management_System.Pages.TableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Content_Management_System"
        mc:Ignorable="d"
        Height="500" Width="650"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Icon="../Resources/Images/icon.ico"
        Title="CMS">

    <!-- Background --> 
    <Window.Background>
        <ImageBrush ImageSource="../Resources/Images/tableBackground.png"
                    Stretch="UniformToFill"
                    AlignmentX="Center"
                    AlignmentY="Center"/>
    </Window.Background>
    
    <!-- Layout -->
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.RowSpan="3"
                CornerRadius="10"
                BorderBrush="DarkGray"
                BorderThickness="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="#66FFFFFF"/>
        <!-- transparent white background-->

        <!-- Row 1: CheckBox and Buttons -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="15 10">
            <CheckBox x:Name="SelectAllCheckBox"
                      Content="Select All"
                      FontWeight="Bold"
                      FontFamily="Verdana"
                      Foreground="Black"
                      VerticalAlignment="Center"
                      Margin="5 0 20 0"
                      Checked="SelectAllCheckBox_Checked"
                      Unchecked="SelectAllCheckBox_Unchecked"/>
            <Button x:Name="AddBtn"
                    Content="Add new"
                    Padding="10"
                    Background="White"
                    FontWeight="Bold"
                    FontFamily="Verdana"
                    Width="120"
                    Cursor="Hand"
                    Margin="0 0 20 0"
                    Click="AddBtn_Click"/>
            <Button x:Name="DltBtn"
                    Content="Delete selected"
                    Padding="10"
                    Background="White"
                    FontWeight="Bold"
                    FontFamily="Verdana"
                    Width="150"
                    Cursor="Hand"
                    Click="DltBtn_Click"/>
        </StackPanel>

        <!-- Row 2: DataGrid -->
        <DataGrid x:Name="TableGrid"
                  Grid.Row="1"
                  ItemsSource="{Binding Spices}"
                  IsReadOnly="True"
                  AutoGenerateColumns="False"
                  FontFamily="Verdana"
                  CanUserAddRows="False"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Top"
                  Height="360"
                  RowHeight="104"
                  Width="520"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.CanContentScroll="True">
            <DataGrid.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#FCE4CF"/>
                <!-- text -->
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black"/>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <!-- if checkBox selected-->
                        <DataTrigger Binding="{Binding Selected}" Value="True">
                            <Setter Property="Background" Value="#FCE4CF"/>
                        </DataTrigger>
                        <!-- if row selected-->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#FCE4CF"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>
            
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Check" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding Selected, UpdateSourceTrigger=PropertyChanged}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Name" Width="125">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Hyperlink Click="Hyperlink_Click">
                                    <Run Text="{Binding Name}"/>
                                </Hyperlink>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Picture" Width="160">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding ImagePath}"
                                   Width="140"
                                   Height="100"
                                   Stretch="Uniform"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Date"
                                    Binding="{Binding DateTime, StringFormat={}{0:dd.MM.yyyy HH:mm}}"
                                    Width="130"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Row 3: LogOut button -->
        <Grid Grid.Row="2">
            <Button x:Name="LogOutBtn"
                    Content="Log out"
                    Padding="5"
                    Background="White"
                    FontWeight="Bold"
                    FontFamily="Verdana"
                    Width="80"
                    HorizontalAlignment="Right"
                    Margin="0 10 10 10"
                    Cursor="Hand"
                    Click="LogOutBtn_Click"/>
        </Grid>
    </Grid>
</Window>
