<Window x:Class="Content_Management_System.Pages.NewSpiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Content_Management_System.Pages"
        mc:Ignorable="d"
        Height="400" Width="650">

    <Window.Background>
        <ImageBrush ImageSource="../Resources/Images/tableBackground.png"
                Stretch="UniformToFill"
                AlignmentX="Center"
                AlignmentY="Center"/>
    </Window.Background>

    <Border CornerRadius="10" BorderBrush="DarkGray" BorderThickness="1" Background="#AAFFFFFF" Margin="20">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Title -->
                <RowDefinition Height="100"/>
                <!-- Image and textBox -->
                <RowDefinition Height="*"/>
                <!-- RichTextBox -->
                <RowDefinition Height="Auto"/>
                <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Naslov -->
            <TextBlock Grid.Row="0" Text="New Spice Form"
                   FontSize="22" FontWeight="Bold" FontFamily="Verdana"
                   HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <!-- Deo za sliku (levo) i polja (desno) -->
            <Grid Grid.Row="1" Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <!-- Slika -->
                    <ColumnDefinition Width="*"/>
                    <!-- Polja -->
                </Grid.ColumnDefinitions>

                <!-- Kvadrat za preview slike -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- Dugme sa slikom -->
                    <Button x:Name="ImageBtn"
                        
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Click="ImageBtn_Click"
                        Cursor="Hand"
                        Background="Transparent"
                        BorderThickness="0">
                            <Image x:Name="ImagePreview"
                            Source="../Resources/Images/imagePlaceholder1.png"
                            Stretch="Uniform"
                            MaxWidth="140"
                            MaxHeight="90"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                    </Button>

                    <!-- Labela ispod slike -->
                    <Label x:Name="errorLabelImage"
                    Height="26"
                    Width="140"
                    FontFamily="Verdana"
                    FontSize="12"
                    Foreground="Red"
                    HorizontalAlignment="Center"
                           />
                </StackPanel>

                <!-- Polja ID i Name -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="20,0,20,5">
                        <Label Content="ID:" Width="50" FontFamily="Verdana" FontSize="13" VerticalAlignment="Center"/>
                        <TextBox x:Name="IdBox" Width="150" FontFamily="Verdana" FontSize="13" VerticalAlignment="Center" TextChanged="IdBox_TextChanged"/>
                        <Label x:Name="errorLabelID" Width="140" Margin="10,0,0,0" Foreground="Red" FontFamily="Verdana"  FontSize="12"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="20,0,20,5">
                        <Label Content="Name:" Width="50" FontFamily="Verdana" FontSize="13" VerticalAlignment="Center"/>
                        <TextBox x:Name="NameBox" Width="150" FontFamily="Verdana" FontSize="13" VerticalAlignment="Center" TextChanged="NameBox_TextChanged"/>
                        <Label x:Name="errorLabelName" Width="140" Margin="10,0,0,0" Foreground="Red" FontFamily="Verdana"  FontSize="12"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- RichTextBox za opis -->
            <GroupBox Grid.Row="2" Header="Description (RTF Content)" Margin="0,0,0,15">
                <RichTextBox x:Name="DescriptionBox" VerticalScrollBarVisibility="Auto"/>
            </GroupBox>

            <!-- Dugmad za snimanje/otkazivanje -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="SaveBtn" Content="Save" Width="100" Click="SaveBtn_Click"/>
                <Button x:Name="CancelBtn" Content="Cancel" Width="100" Click="CancelBtn_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
