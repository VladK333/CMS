<Window x:Class="Content_Management_System.Pages.NewSpiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Content_Management_System.Pages"
        mc:Ignorable="d"
        Height="550" Width="650"
                WindowStartupLocation="CenterScreen">

    <Window.Background>
        <ImageBrush ImageSource="../Resources/Images/tableBackground.png"
                Stretch="UniformToFill"
                AlignmentX="Center"
                AlignmentY="Center"/>
    </Window.Background>

    <Border CornerRadius="10" BorderBrush="DarkGray" BorderThickness="1" Background="#AAFFFFFF" Margin="20">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="108"/>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>

            <!-- Naslov -->
            <TextBlock Grid.Row="0" Text="Spice Form"
                   FontSize="22" FontWeight="Bold" FontFamily="Verdana"
                   HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <!-- Deo za sliku (levo) i polja (desno) -->
            <Grid Grid.Row="1" Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <!-- Slika -->
                    <ColumnDefinition Width="*"/>
                    <!-- Polja -->
                </Grid.ColumnDefinitions>

                <!-- Kvadrat za preview slike -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- Dugme sa slikom -->
                    <Button x:Name="ImageBtn"
                        
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Click="ImageBtn_Click"
                        Cursor="Hand"
                        Background="Transparent"
                        BorderThickness="0">
                        <Image x:Name="ImagePreview"
                            Source="../Resources/Images/imagePlaceholder1.png"
                            Stretch="Uniform"
                            MaxWidth="140"
                            MaxHeight="100"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                    </Button>

                    <!-- Labela ispod slike -->
                    <Label x:Name="errorLabelImage"
                    Height="26"
                    Width="140"
                    FontFamily="Verdana"
                    FontSize="13"
                    Foreground="Red"
                    HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           />
                </StackPanel>

                <!-- Polja ID i Name -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="20,0,20,5">
                        <Label Content="ID:" Width="55" FontFamily="Verdana" FontSize="14" VerticalAlignment="Center"/>
                        <TextBox x:Name="IdBox" Width="150"  Margin="5,0,0,0"  FontFamily="Verdana" FontSize="14" VerticalAlignment="Center" TextChanged="IdBox_TextChanged"/>
                        <Label x:Name="errorLabelID" Width="140" Margin="10,0,0,0" Foreground="Red" FontFamily="Verdana"  FontSize="12"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="20,0,20,5">
                        <Label Content="Name:" Width="55" FontFamily="Verdana" FontSize="14" VerticalAlignment="Center"/>
                        <TextBox x:Name="NameBox" Width="150"  Margin="5,0,0,0"  FontFamily="Verdana" FontSize="14" VerticalAlignment="Center" TextChanged="NameBox_TextChanged"/>
                        <Label x:Name="errorLabelName" Width="140" Margin="10,0,0,0" Foreground="Red" FontFamily="Verdana"  FontSize="12"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <Label Grid.Row="2" Content="Description" FontFamily="Verdana" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <DockPanel Grid.Row="3" LastChildFill="True">

                <!-- Toolbar -->
                <ToolBar Name="MainToolbar" DockPanel.Dock="Top" Margin="0,0,0,5" Width="565" HorizontalAlignment="Right">
                    <!-- Bold -->
                    <ToggleButton FontSize="17" Command="EditingCommands.ToggleBold"
                          Content=" B " Name="BtnBold" FontWeight="ExtraBold"/>
                    <Separator/>
                    <!-- Italic -->
                    <ToggleButton FontSize="17" Command="EditingCommands.ToggleItalic"
                          Content=" I " Name="BtnItalic" FontStyle="Italic" />
                    <Separator/>
                    <!-- Underline -->
                    <ToggleButton FontSize="17" Command="EditingCommands.ToggleUnderline"
                          Name="BtnUnderline">
                        <TextBlock TextDecorations="Underline" FontWeight="ExtraBold">U</TextBlock>
                    </ToggleButton>
                    <Separator/>

                    <!-- Font Family ComboBox -->
                    <ComboBox x:Name="cmbFontFamily" Width="220" Margin="10,0,0,0"
          SelectionChanged="CmbFontFamily_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Source}" 
                       FontFamily="{Binding}" 
                       FontSize="16"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Color Picker -->
                    <ComboBox x:Name="cboColors" Width="150" Margin="10,0,0,0"
                      SelectionChanged="CboColors_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <!-- Pravougaonik sa bojom -->
                                    <Rectangle Margin="5,1,10,1" Width="20" Height="15"
                                       Fill="{Binding Name}" Stroke="Black"/>
                                    <TextBlock Text="{Binding Name}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Font Size ComboBox -->
                    <ComboBox x:Name="cmbFontSize" Width="60" Margin="10,0,0,0"
                      SelectionChanged="CmbFontSize_SelectionChanged"/>
                </ToolBar>

                <StatusBar DockPanel.Dock="Bottom" Background="SandyBrown">
                    <TextBlock x:Name="txtWordCount" Text="Words: 0" FontFamily="Verdana" />
                </StatusBar>

                <RichTextBox x:Name="DescriptionBox" VerticalAlignment="Top" FontFamily="Verdana" Height="156" VerticalScrollBarVisibility="Auto" TextChanged="DescriptionBox_TextChanged"/>

            </DockPanel>
            <Label x:Name="errorLabelDescription"
                   Grid.Row="4"
                   Margin="0,0,0,5"
                   Foreground="Red"
                   FontFamily="Verdana"
                   FontSize="12"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"/>

            <!-- Dugmad za snimanje/otkazivanje -->
            <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="SaveBtn" Cursor="Hand" Content="Save" Width="100" Click="SaveBtn_Click" FontFamily="Verdana" Margin="0,0,10,0" Foreground="Black"/>
                <Button x:Name="CancelBtn" Cursor="Hand" Content="Cancel" Width="100" Click="CancelBtn_Click" FontFamily="Verdana" Margin="10,0,0,0" Foreground="Black"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
