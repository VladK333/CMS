<Window x:Class="Content_Management_System.TableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Content_Management_System"
        mc:Ignorable="d"
        Height="400" Width="650"
        WindowStartupLocation="CenterScreen">

    <!-- Pozadina celog prozora -->
    <Window.Background>
        <ImageBrush ImageSource="resources/images/tableBackground.avif"
                    Stretch="UniformToFill"
                    AlignmentX="Center"
                    AlignmentY="Center"/>
    </Window.Background>

    <!-- Glavni layout -->
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Dugmad -->
            <RowDefinition Height="*"/>
            <!-- Tabela -->
            <RowDefinition Height="Auto"/>
            <!-- Exit dugme -->
        </Grid.RowDefinitions>

        <!-- Ako ti treba okvir sa zaobljenim uglovima, koristi Border -->
        <Border Grid.RowSpan="3"
                CornerRadius="10"
                BorderBrush="DarkGray"
                BorderThickness="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="#66FFFFFF"/>
        <!-- providna bela pozadina preko slike -->

        <!-- Red 1: CheckBox i Dugmad -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="15 10">
            <CheckBox x:Name="SelectAllCheckBox"
                      Content="Select All"
                      FontWeight="Bold"
                      Foreground="Black"
                      VerticalAlignment="Center"/>
            <Button x:Name="addBtn"
                    Content="Add new"
                    Padding="10"
                    Background="White"
                    FontWeight="Bold"
                    Width="120"
                    Cursor="Hand"/>
            <Button x:Name="Delete_btn"
                    Content="Delete selected"
                    Padding="10"
                    Background="White"
                    FontWeight="Bold"
                    Width="150"
                    Cursor="Hand"/>
        </StackPanel>

        <!-- Red 2: DataGrid -->
        <DataGrid x:Name="TableGrid"
                  Grid.Row="1"
                  ItemsSource="{Binding Spices}" 
                  IsReadOnly="True"
                  AutoGenerateColumns="False"
                  
                  CanUserAddRows="False"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Top"
                  Height="250"
                  Width="600"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.CanContentScroll="True">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Check" Width="70">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding Selected, UpdateSourceTrigger=PropertyChanged}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Name" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Hyperlink>
                                    <Run Text="{Binding Name}"/>
                                </Hyperlink>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Picture" Width="160">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Picture}"
                                   Width="140"
                                   Height="100"
                                   Stretch="Uniform"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Date"
                                    Binding="{Binding Date}"
                                    Width="140"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Red 3: Exit dugme -->
        <Grid Grid.Row="2">
            <Button x:Name="ExitDGT_btn"
                    Content="Exit"
                    Padding="5"
                    Background="White"
                    FontWeight="Bold"
                    Width="80"
                    HorizontalAlignment="Right"
                    Margin="0 10 10 10"
                    Cursor="Hand"/>
        </Grid>
    </Grid>
</Window>
